<p id="notice"><%= notice %></p>


<h1>Patients</h1>

<%= form_tag(patients_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:name], placeholder: "Search patient" %>
<%= submit_tag "Search" %>
<% end %>
<table>
  <thead>
    <tr colspan="3"></th>
      <th>Name</th>
      <th>Address</th>
      <th>Number</th>
      <th>Birthday</th>
      <th>infection</th>
      <th>Injury</th>
      <th>Observations</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody colspan="3">
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.address %></td>
        <td><%= patient.number %></td>
        <td><%= patient.birthday %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.observations %></td>
        <td><%= link_to 'Show', patient %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>

  </tbody>
</table>


<br>
<td><button><%= link_to 'New Patient', new_patient_path %></button></td>
